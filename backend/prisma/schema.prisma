generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  pets     Pet[]
}

model Pet {
  id         Int    @id @default(autoincrement())
  name       String
  age        Int
  type       String
  adopted    Boolean @default(false)
  userId     Int
  user       User   @relation(fields: [userId], references: [id])
}
